root = true

[*]
# encoding
charset = utf-8
# line endings
end_of_line = lf
insert_final_newline = true
# indentation
indent_style = space
indent_size = 4
# whitespaces
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[{*.yaml, .clang-format}]
indent_size = 2

# Vendored code which should not be touched
[include/vsmsdk/**]
generated_code = true
